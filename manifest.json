{
  "manifest_version": 3,
  "name": "API Request Recorder",
  "version": "1.0",
  "description": "Record API requests in curl format for CI/CD test generation.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
